<div class="container">
  <h1 class="form">卒業生、<br>入場。</h1>
  <% if @error %>
    <div class="alert alert-danger">
      <p><%= @error %></p>
    </div>
  <% end %>
  <form action="/login" method="post">
  <div class="input-container float-right">
    <div class="form-group input-form">
      本名 : <br>
      <input type="text" name="name">
    </div>
    <div class="form-group input-form">
      メンター名 : <br>
      <input type="text" name="mentor_name">
    </div>
    <div class="form-group input-form">
      誕生日 : <br>
      <input type="date" name="date" min="2019-01-01" max="2019-12-31">
    </div>
  </div>
  <div class="form-group sotsugyou-container">
    <!-- <h3>入場しますか？</h3> -->
    <div class="button-container">
      <button type="submit" class="door-button">入場する</button>
    </div>
  </div>
  </form>
</div>